.container {
  background: #f8f9fa;
  min-height: 100vh;
}

.search-header {
  background: white;
  padding: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.search-input-container {
  display: flex;
  align-items: center;
  background: #f8f9fa;
  border-radius: 50rpx;
  padding: 20rpx 30rpx;
}

.search-icon {
  margin-right: 20rpx;
  color: #999;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
}

.clear-icon {
  margin-left: 20rpx;
  color: #999;
}

.cancel-btn {
  margin-left: 20rpx;
  color: #667eea;
  font-size: 28rpx;
}

.search-history {
  background: white;
  margin: 20rpx;
  border-radius: 15rpx;
  padding: 30rpx;
}

.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.history-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.clear-history {
  color: #667eea;
  font-size: 26rpx;
}

.history-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.history-tag {
  background: #f8f9fa;
  color: #666;
  padding: 15rpx 25rpx;
  border-radius: 25rpx;
  font-size: 26rpx;
}

.hot-search {
  background: white;
  margin: 20rpx;
  border-radius: 15rpx;
  padding: 30rpx;
}

.hot-header {
  margin-bottom: 30rpx;
}

.hot-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.hot-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.hot-tag {
  background: #667eea;
  color: white;
  padding: 15rpx 25rpx;
  border-radius: 25rpx;
  font-size: 26rpx;
}

.search-results {
  margin: 20rpx;
}

.result-header {
  background: white;
  border-radius: 15rpx 15rpx 0 0;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.result-count {
  font-size: 28rpx;
  color: #666;
}

.result-list {
  background: white;
  border-radius: 0 0 15rpx 15rpx;
}

.result-item {
  display: flex;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.result-item:last-child {
  border-bottom: none;
}

.result-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
}

.result-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.result-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.result-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
  margin-bottom: 15rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.result-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.result-category {
  background: #667eea;
  color: white;
  padding: 8rpx 15rpx;
  border-radius: 15rpx;
  font-size: 22rpx;
}

.result-views {
  font-size: 24rpx;
  color: #999;
}

.load-more {
  text-align: center;
  padding: 40rpx;
  background: white;
  margin: 20rpx;
  border-radius: 15rpx;
}

.load-more-text {
  color: #667eea;
  font-size: 28rpx;
}

.no-result {
  text-align: center;
  padding: 100rpx 60rpx;
  background: white;
  margin: 20rpx;
  border-radius: 15rpx;
}

.no-result-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.no-result-text {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 15rpx;
}

.no-result-tip {
  font-size: 26rpx;
  color: #999;
}
