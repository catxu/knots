.container {
  background: #f8f9fa;
  min-height: 100vh;
}

.knot-header {
  position: relative;
  height: 400rpx;
}

.knot-cover {
  width: 100%;
  height: 100%;
}

.knot-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(transparent, rgba(0, 0, 0, 0.7));
  padding: 40rpx 30rpx;
  color: white;
}

.knot-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.knot-meta {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  opacity: 0.9;
}

.knot-info {
  background: white;
  margin: 20rpx;
  border-radius: 15rpx;
  padding: 30rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.info-item:last-child {
  margin-bottom: 0;
}

.info-label {
  color: #666;
  font-size: 28rpx;
}

.info-value {
  color: #333;
  font-size: 28rpx;
}

.difficulty-stars {
  display: flex;
  align-items: center;
}

.star {
  color: #ffd700;
  font-size: 24rpx;
  margin-right: 5rpx;
}

.difficulty-text {
  color: #666;
  font-size: 24rpx;
  margin-left: 10rpx;
}

.knot-description {
  background: white;
  margin: 20rpx;
  border-radius: 15rpx;
  padding: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.description-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.knot-steps {
  background: white;
  margin: 20rpx;
  border-radius: 15rpx;
  padding: 30rpx;
}

.steps-list {
  margin-top: 20rpx;
}

.step-item {
  margin-bottom: 40rpx;
  padding-bottom: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.step-item:last-child {
  border-bottom: none;
  margin-bottom: 0;
  padding-bottom: 0;
}

.step-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.step-number {
  width: 60rpx;
  height: 60rpx;
  background: #667eea;
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: bold;
  margin-right: 20rpx;
}

.step-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.step-description {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 20rpx;
}

.step-images {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.step-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}

.knot-images {
  background: white;
  margin: 20rpx;
  border-radius: 15rpx;
  padding: 30rpx;
}

.images-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 10rpx;
  margin-top: 20rpx;
}

.grid-image {
  width: 100%;
  height: 200rpx;
  border-radius: 10rpx;
}

.related-knots {
  background: white;
  margin: 20rpx;
  border-radius: 15rpx;
  padding: 30rpx;
}

.related-list {
  margin-top: 20rpx;
}

.related-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.related-item:last-child {
  border-bottom: none;
}

.related-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
}

.related-info {
  flex: 1;
}

.related-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.related-category {
  font-size: 24rpx;
  color: #667eea;
}

.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  border-top: 1rpx solid #f0f0f0;
  padding: 20rpx;
  display: flex;
  gap: 20rpx;
}

.action-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
  border: none;
}

.share-btn {
  background: #667eea;
  color: white;
}

.favorite-btn {
  background: #f8f9fa;
  color: #333;
}
