.container {
  background: #f8f9fa;
  min-height: 100vh;
}

.knot-header {
  position: relative;
  height: 400rpx;
}

.knot-cover {
  width: 100%;
  height: 100%;
}

.knot-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(transparent, rgba(0, 0, 0, 0.7));
  padding: 40rpx 30rpx;
  color: white;
}

.knot-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.knot-meta {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  opacity: 0.9;
}

.knot-info {
  background: white;
  margin: 20rpx;
  border-radius: 15rpx;
  padding: 30rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.info-item:last-child {
  margin-bottom: 0;
}

.info-label {
  color: #666;
  font-size: 28rpx;
}

.info-value {
  color: #333;
  font-size: 28rpx;
}

.difficulty-stars {
  display: flex;
  align-items: center;
}

.star {
  color: #ffd700;
  font-size: 24rpx;
  margin-right: 5rpx;
}

.difficulty-text {
  color: #666;
  font-size: 24rpx;
  margin-left: 10rpx;
}

.knot-description {
  background: white;
  margin: 20rpx;
  border-radius: 15rpx;
}

.description-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

/* 打结步骤 */
.knot-steps {
  margin: 20rpx 0 0 0;
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx 30rpx 0 30rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 30rpx;
  position: relative;
  padding-left: 20rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 30rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 3rpx;
}

/* 轮播图样式 */
.steps-carousel {
  margin-bottom: 30rpx;
}

.carousel-swiper {
  height: 500rpx;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
}

.carousel-image {
  width: 100%;
  height: 100%;
  background: #f8f9fa;
}

.image-info {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(transparent, rgba(0, 0, 0, 0.7));
  padding: 20rpx;
  color: white;
}

.image-remark {
  font-size: 28rpx;
  line-height: 1.4;
}

/* 轮播图控制 */
.carousel-controls {
  margin-top: 20rpx;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
}

.control-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.control-item:last-child {
  margin-bottom: 0;
}

.control-label {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-right: 15rpx;
}

.autoplay-switch {
  transform: scale(0.8);
}

.speed-slider {
  flex: 1;
  margin: 0 20rpx;
}

.speed-text {
  font-size: 24rpx;
  color: #666;
  min-width: 60rpx;
  text-align: right;
}

/* 步骤文字描述 */
.steps-text {
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  padding-top: 30rpx;
  border-top: 1rpx solid #e9ecef;
}

.text-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
}

.steps-content {
  font-size: 28rpx;
  line-height: 1.6;
  color: #555;
  text-align: justify;
  white-space: pre-wrap;
}

/* 相关图片 */
.knot-images {
  background: white;
  margin: 20rpx;
  border-radius: 15rpx;
  padding: 30rpx;
}

.images-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.grid-image {
  width: 100%;
  height: 200rpx;
  border-radius: 10rpx;
}

/* 相关推荐 */
.related-knots {
  background: white;
  margin: 20rpx;
  border-radius: 15rpx;
  padding: 30rpx;
}

.related-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.related-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
}

.related-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
}

.related-info {
  flex: 1;
}

.related-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
  display: block;
}

.related-category {
  font-size: 24rpx;
  color: #666;
}

/* 底部操作栏 */
.bottom-actions {
  /* position: fixed; */
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  border-top: 1rpx solid #f0f0f0;
  padding: 20rpx;
  display: flex;
  gap: 20rpx;
}

.action-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
  border: none;
}

.action-btn text {
  margin-top: 8rpx;
}

.share-btn {
  background: #667eea;
  color: white;
}

.favorite-btn {
  background: #f8f9fa;
  color: #333;
}
