<!--pages/profile/profile.wxml-->
<view class="container">
  <!-- 用户信息 -->
  <view class="user-info">
    <view class="user-avatar" bindtap="login" wx:if="{{!userInfo}}">
      <image src="/images/default-avatar.svg" mode="aspectFill"></image>
      <text class="login-text">点击登录</text>
    </view>
    <view class="user-avatar" wx:else>
      <image src="{{userInfo.avatarUrl}}" mode="aspectFill"></image>
      <text class="user-name">{{userInfo.nickName}}</text>
    </view>
  </view>

  <!-- 功能菜单 -->
  <view class="menu-list">
    <view class="menu-item" bindtap="goToFavorites">
      <view class="menu-icon">
        <text class="icon">❤</text>
      </view>
      <text class="menu-text">我的收藏</text>
      <text class="menu-arrow">></text>
    </view>

    <view class="menu-item" bindtap="goToHistory">
      <view class="menu-icon">
        <text class="icon">📖</text>
      </view>
      <text class="menu-text">浏览历史</text>
      <text class="menu-arrow">></text>
    </view>

    <view class="menu-item" bindtap="goToSettings">
      <view class="menu-icon">
        <text class="icon">⚙</text>
      </view>
      <text class="menu-text">设置</text>
      <text class="menu-arrow">></text>
    </view>

    <view class="menu-item" bindtap="goToAbout">
      <view class="menu-icon">
        <text class="icon">ℹ</text>
      </view>
      <text class="menu-text">关于我们</text>
      <text class="menu-arrow">></text>
    </view>
  </view>

  <!-- 退出登录 -->
  <view class="logout-btn" bindtap="logout" wx:if="{{userInfo}}">
    <text>退出登录</text>
  </view>
</view>